@model EquipmentManagement.Domain.DTO.SiteSide.Product.ProductDetailDTO

@{
    ViewData["Title"] = "اطلاعات کالای " + Model.ProductTitle;
}

@section Scripts
{
    <partial name="_JqueryValidation" />
}

@section Breadcrumbs
{
    <li>
        <a asp-area="" asp-controller="Product" asp-action="FilterProduct"> مدیریت تجهیزات  </a>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<div class="row">

    <div class="col-lg-12 col-sm-12">
        <div class="widget">
            <div class="widget-header bordered-bottom bordered-warning">
                <span class="widget-caption"> @ViewData["Title"] </span>
            </div>
            <div class="widget-body">
                <div>

                    <div class="row">

                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="ProductTitle">عنوان</label>
                            <p type="text" class="form-control" >@Model.ProductTitle</p>
                        </div>

                        <div class="form-group col-md-6 col-sm-12">
                            <label asp-for="PlaceName">نام محل قرارگیری</label>
                            <p type="text" class="form-control">@Model.PlaceName</p>
                        </div>

                        <div class="form-group col-md-12 col-sm-12">
                            <label asp-for="CategoryName">عنوان دسته بندی</label>
                            <p type="text" class="form-control">@Model.CategoryName</p>
                        </div>

                        <div class="form-group col-md-12 col-sm-12">
                            <label asp-for="BarCode">بارکد</label>
                            <p type="text" class="form-control" >@Model.BarCode</p>
                        </div>

                        <div class="form-group col-md-12 col-sm-12">
                            <label asp-for="Description">توضیحات (اختیاری)</label>
                            <p type="text" class="form-control" >@Model.Description</p>
                        </div>

                    </div>

                    <hr class="margin-bottom-10 margin-top-10" />

                    <div class="row">
                        <div class="col-md-12 flex-style">
                            <a asp-area="" asp-controller="Product" asp-action="FilterProduct" class="btn btn-labeled btn-warning">
                                <i class="btn-label glyphicon glyphicon-ok"></i>بازگشت
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

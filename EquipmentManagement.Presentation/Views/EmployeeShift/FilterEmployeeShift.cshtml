@using EquipmentManagement.Application.Extensions;
@using EquipmentManagement.Application.Convertors;
@using EquipmentManagement.Domain.DTO.SiteSide.EmployeeShifts
@model FilterEmployeeShiftDTO

@{
    ViewData["Title"] = "شیفت کارمندان";
}

@section Scripts
{

    <partial name="_PersianDatePickerScript" />
}
@section Styles
{
    <partial name="_PersianDatePickerLink" />

}
@section breadcrumbs
{

    <li class="active">@ViewData["Title"]</li>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-xl-3 col-lg-3">

            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> فیلتر  </span>
                </div>
                <div class="widget-body">
                    <div class="row">
                        <div class="basic-form">
                            <form asp-area="" asp-controller="EmployeeShift" asp-action="FilterEmployeeShift" method="get" id="filter-search">
                                <input type="hidden" asp-for="Page" />

                                <div class="form-row">

                                    <div class="form-group col-md-12">
                                        <label>تاریخ شیفت</label>
                                        <input type="text" data-jdp asp-for="Date" class="form-control" placeholder="نام وعده ">
                                        <input type="hidden" asp-for="EmployeeId" value="@ViewBag.EmployeeId">
                                    </div>

                                  

                                </div>

                                <hr />
                                <div class="form-group col-md-12">
                                    <a asp-action="CreateEmployeeShift" asp-controller="EmployeeShift" asp-route-EmployeeId="@ViewBag.EmployeeId" asp-area="" class="btn btn-labeled w-100 btn-palegreen">
                                        <i class="btn-label fas fa-calendar-plus"></i> افزودن
                                    </a>
                                </div>

                                <div class="form-group col-md-12">
                                    <button type="submit" class="btn btn-labeled w-100 btn-palegreen">
                                        <i class="btn-label glyphicon glyphicon-filter"></i>فیلتر
                                    </button>
                                </div>

                                @if (Context.Request.QueryString.HasValue)
                                {
                                    <div class="form-group col-md-12">
                                        <a asp-action="FilterEmployeeShift" asp-controller="EmployeeShift" asp-area="" class="btn btn-labeled w-100 btn-darkorange">
                                            <i class="btn-label glyphicon glyphicon-remove"></i>حذف فیلتر
                                        </a>
                                    </div>
                                }

                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-12 col-lg-9">
            <div class="well with-header with-footer table-responsive">
                <div class="header bordered-azure">
                    <div class="flex-style">
                        <span>شیفت ها </span>
                        <span>تعداد کل : @Model.AllEntitiesCount</span>
                    </div>
                </div>

                @if (Model != null)
                {
                    <table class="table table-hover table-bordered tc tableShowListInAdmin">

                        <thead class="tc">
                            <tr class="tc">
                                <th>
                                  تاریخ شیفت
                                </th>
                             
                             
                                <th>
                                    تاریخ ثبت
                                </th>

                            
                                <th>
                                    امکانات
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var EmployeeShift in Model.Entities)
                            {
                                <tr id="profile_@EmployeeShift.Id" remove-ajax-item="@EmployeeShift.Id">
                                    <td>
                                        @EmployeeShift.Date.ToShamsi()
                                    </td>
                            
                                
                                    <td>
                                        @EmployeeShift.CreateDate.ToShamsi()
                                    </td>

                                    <td>
                                        <div class="d-flex justify-content-center ">
                                                       <a title="ویرایش اطلاعات وعده"
                                               asp-controller="EmployeeShiftMeal"
                                               asp-action="FilterEmployeeShiftMeal"
                                               asp-route-EmployeeShiftSelectedId="@EmployeeShift.Id"
                                               class="btn btn-warning btn-circle btn-xs">
                                                <i class="glyphicon glyphicon-edit"></i>
                                            </a>
                                 @*            <a title="ویرایش اطلاعات وعده"
                                               asp-controller="EmployeeShift"
                                               asp-action="EditEmployeeShift"
                                               asp-route-Id="@EmployeeShift.Id"
                                               class="btn btn-warning btn-circle btn-xs">
                                                <i class="glyphicon glyphicon-edit"></i>
                                            </a> *@
                                            <button onclick="DeleteAjax(@EmployeeShift.Id, '@Url.Action("RemoveEmployeeShift", "EmployeeShift", new { area = "", EmployeeShiftSelectedId = EmployeeShift.Id })')" class="btn btn-danger btn-circle btn-xs"><i class="glyphicon glyphicon-trash"></i></button>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <partial name="_Paging" model="@Model.GetCurrentPaging()" />
                }
                else
                {
                    <partial name="_NotFoundPartial" />
                }

            </div>
        </div>
    </div>
</div>

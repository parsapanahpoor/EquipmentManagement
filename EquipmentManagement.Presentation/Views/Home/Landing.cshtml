                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <a asp-action="FilterEmployees" asp-controller="FoodGroupReport" asp-area="">
                        <div class="databox radius-bordered bg-white">
                            <div class="databox-right bg-themeprimary">
                                <div class="databox-icon">
                                    <i class="fa fa-users fa-2x text-white"></i>
                                </div>
                            </div>
                            <div class="databox-left">
                                <span class="databox-number themeprimary"></span>
                                <div class="databox-text darkgray" style="font-size:20px; font-weight:bolder">

@using EquipmentManagement.Domain.DTO.SiteSide.MealPricing;
@using EquipmentManagement.Application.Extensions;
@using EquipmentManagement.Application.Convertors;
@model  FilterMealPricing

@{
    ViewData["Title"] = "مدیریت کارمندان";
}
@section Scripts
{
}

@section breadcrumbs
{

    <li class="active">@ViewData["Title"]</li>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-xl-3 col-lg-3">

            <div class="widget">
                <div class="widget-header bordered-bottom bordered-green">
                    <span class="widget-caption"> فیلتر  </span>
                </div>
                <div class="widget-body">
                    <div class="row">
                        <div class="basic-form">
                            <form asp-area="" asp-controller="MealPricing" asp-action="FilterMealPricing" method="get" id="filter-search">
                                <input type="hidden" asp-for="Page" />

                                <div class="form-row">

                                    <div class="form-group col-md-12">
                                        <label>نام وعده</label>
                                        <input type="text" asp-for="MealType" class="form-control" placeholder="نام وعده ">
                                    </div>

                                    <div class="form-group col-md-12">
                                        <label>هزینه</label>
                                        <input type="text" asp-for="Price" class="form-control" placeholder="هزینه  ">
                                    </div>


                                </div>

                                <hr />

                                <div class="form-group col-md-12">
                                    <button type="submit" class="btn btn-labeled w-100 btn-palegreen">
                                        <i class="btn-label glyphicon glyphicon-filter"></i>فیلتر
                                    </button>
                                </div>

                                @if (Context.Request.QueryString.HasValue)
                                {
                                    <div class="form-group col-md-12">
                                        <a asp-action="FilterMealPricing" asp-controller="MealPricing" asp-area="" class="btn btn-labeled w-100 btn-darkorange">
                                            <i class="btn-label glyphicon glyphicon-remove"></i>حذف فیلتر
                                        </a>
                                    </div>
                                }

                            </form>
                        </div>

                    </div>

                </div>
            </div>
        </div>

        <div class="col-xs-12 col-md-12 col-lg-9">
            <div class="well with-header with-footer table-responsive">
                <div class="header bordered-azure">
                    <div class="flex-style">
                        <span>وعده ها </span>
                        <span>تعداد کل : @Model.AllEntitiesCount</span>
                    </div>
                </div>

                @if (Model != null)
                {
                    <table class="table table-hover table-bordered tc tableShowListInAdmin">

                        <thead class="tc">
                            <tr class="tc">
                                <th>
                                    نام وعده
                                </th>
                                <th>
                                هزینه
                                </th>
                             
                                <th>
                                    تاریخ ثبت
                                </th>

                            
                                <th>
                                    امکانات
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var MealPricing in Model.Entities)
                            {
                                <tr id="profile_@MealPricing.Id" remove-ajax-item="@MealPricing.Id">
                                    <td>
                                        @MealPricing.MealType
                                    </td>
                                    <td>
                                        @MealPricing.Price
                                    </td>
                                
                                    <td>
                                        @MealPricing.CreateDate.ToShamsi()
                                    </td>

                                    <td>
                                        <div class="d-flex justify-content-center ">

                                            <a title="ویرایش اطلاعات وعده"
                                               asp-controller="MealPricing"
                                               asp-action="EditMealPricing"
                                               asp-route-Id="@MealPricing.Id"
                                               class="btn btn-warning btn-circle btn-xs">
                                                <i class="glyphicon glyphicon-edit"></i>
                                            </a>
                                            <button onclick="DeleteAjax(@MealPricing.Id, '@Url.Action("RemoveMealPricing", "MealPricing", new { area = "", MealPricingId = MealPricing.Id })')" class="btn btn-danger btn-circle btn-xs"><i class="glyphicon glyphicon-trash"></i></button>

                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <partial name="_Paging" model="@Model.GetCurrentPaging()" />
                }
                else
                {
                    <partial name="_NotFoundPartial" />
                }

            </div>
        </div>
    </div>
</div>

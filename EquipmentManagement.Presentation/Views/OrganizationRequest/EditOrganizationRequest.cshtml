@using EquipmentManagement.Domain.Entities.OrganizationRequest
@model EquipmentManagement.Domain.DTO.SiteSide.OrganizationRequest.OrganizationRequestEntryModel

@{
    ViewData["Title"] = "ویرایش درخواست سازمانی ";
}

@section Scripts
{
    <partial name="_JqueryValidation" />
}

@section Breadcrumbs
{
    <li>
        <a asp-area="" asp-controller="OrganizationRequest" asp-action="FilterOrganziationRequest"> مدیریت درخواست های سازمانی   </a>
        <a href="javascript:void(0)"> @ViewData["Title"] </a>
    </li>
}

<form method="post" asp-action="EditOrganizationRequest" asp-controller="OrganizationRequest" asp-area="" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <div class="row">
        <div class="col-lg-12 col-sm-12">
            <div class="widget">
                <div class="widget-header bordered-bottom bordered-primary">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>

                        <div class="row">

                            <div class="form-group col-md-12 col-sm-12">
                                <label asp-for="RequestType"> نوع درخواست </label>
                                <select asp-for="RequestType" class="form-control" asp-items="Html.GetEnumSelectList(typeof(RequestType))"></select>
                            </div>

                            <div class="form-group col-md-12 col-sm-12">
                                <label>
                                    <input type="checkbox" asp-for="IsActive">
                                    <span class="text"> فعال </span>
                                </label>
                            </div>

                        </div>

                        <hr class="margin-bottom-10 margin-top-10" />

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-primary">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</form>
